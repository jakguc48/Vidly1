@using Vidly1.Models
@model Vidly1.ViewModels.CustomersViewModel

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<table class=“table table-bordered table-hover”>
    <tr>
        <th>Customers</th>
    </tr>
    @foreach (var Customer in Model.Customers)
    {
        <tr>
            <td>@Customer.Id</td>
            <td>@Html.ActionLink(@Customer.Name, "Details", "Movies", new {id= @Customer.Id}, null)</td>
       </tr>

    }
</table>

